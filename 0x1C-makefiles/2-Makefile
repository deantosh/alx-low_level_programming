# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

# Top level target
all: $(NAME)

# Rule to link object files
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile .c files
main.o: main.c
	$(CC) -c -o main.o main.c
school.o: school.c
	$(CC) -c -o school.o school.c

.PHONY: clean
clean:
	rm $(OBJ) $(name)
